<span class='field-currency flex items-end'>{{ cart.currency.symbol }}</span>

<div class='flex flex-col w-full'>
  <label class='text-xs tracking-wide uppercase mb-1' for='{{ id_prefix }}{{ filter.label | escape }}-GTE'>
    {{- 'products.facets.from' | t -}}
  </label>
  <input
    class='p-2 max-w-[100px] text-sm border border-black focus-visible:outline-2 focus-visible:shadow-none focus-visible:outline-offset-0'
    name='{{ filter.min_value.param_name }}'
    id='{{ id_prefix }}{{ filter.label | escape }}-GTE'
    {%- if filter.min_value.value -%}
      value='{{ filter.min_value.value | money_without_currency }}'
    {%- endif -%}
    type='text'
    inputmode='decimal'
    placeholder='0'
    data-pattern='\d| |,|\.'
    data-min='0'
    data-max='{{ filter.range_max | money_without_currency }}'
  >
</div>

{%- if filter_type != 'vertical' -%}
  <span class='field-currency'>{{ cart.currency.symbol }}</span>
{%- endif -%}

<div class='flex flex-col w-full'>
  <label class='text-xs tracking-wide uppercase mb-1' for='{{ id_prefix }}{{ filter.label | escape }}-LTE'>
    {{- 'products.facets.to' | t -}}
  </label>
  <input
    class='p-2 max-w-[100px] text-sm border border-black focus-visible:outline-2 focus-visible:shadow-none focus-visible:outline-offset-0'
    name='{{ filter.max_value.param_name }}'
    id='{{ id_prefix }}{{ filter.label | escape }}-LTE'
    {%- if filter.max_value.value -%}
      value='{{ filter.max_value.value | money_without_currency }}'
    {%- endif -%}
    type='text'
    inputmode='decimal'
    placeholder='{{ filter.range_max | money_without_currency }}'
    data-pattern='\d| |,|\.'
    data-min='0'
    data-max='{{ filter.range_max | money_without_currency }}'
  >
</div>
