<div class='flex flex-col'>
  <ul class='flex flex-col gap-4 w-full'>
    {% for link in linklists['collection-menu'].links %}
      {% if link.title != 'Shop by Model' %}
        <h2 class='text-[32px] uppercase font-semibold'>{{ link.title }}</h2>
        {%- if link.links != blank -%}
          <ul class='mm-grid grid-cols-2 md:flex md:flex-col gap-4'>
            {%- for child_link in link.links -%}
              <li class='flex items-center w-full shadow'>
                <a
                  href='{{ child_link.url }}'
                  class='whitespace-nowrap w-full h-full p-3'
                >
                  {{ child_link.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      {% else %}
        <h2 class='text-[32px] uppercase font-semibold'>{{ link.title }}</h2>
        {%- if link.links != blank -%}
          <menu-swiper class='menu-swiper swiper w-full max-w-[100vw]'>
            <ul class='swiper-wrapper md:flex md:flex-col gap-4'>
              {%- for child_link in link.links -%}
                <li class='swiper-slide lg:!h-fit flex items-center lg:!w-full shadow'>
                  <a
                    href='{{ child_link.url }}'
                    class='whitespace-nowrap p-3 w-full h-full'
                  >
                    {{ child_link.title }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          </menu-swiper>
        {%- endif -%}
      {% endif %}
    {% endfor %}
  </ul>
  {% if section.settings.disclaimer_title != blank and section.settings.disclaimer_body != blank %}
    <div class='flex flex-col'>
      <span>{{ section.settings.disclaimer_title }}</span>
      <p>{{ section.settings.disclaimer_body }}</p>
    </div>
  {% endif %}
</div>
